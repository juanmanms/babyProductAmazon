---
interface Props {
  variant?: 'primary' | 'secondary' | 'accent';
  href?: string;
  class?: string;
  target?: string;
  rel?: string;
}

const { 
  variant = 'primary',
  href,
  target,
  rel,
  class: className = '',
} = Astro.props;

const baseClass = 'inline-flex items-center justify-center rounded-lg font-medium transition-colors duration-200 px-6 py-3';
const variantClass = {
  primary: 'bg-primary-DEFAULT text-text-primary hover:bg-primary-dark',
  secondary: 'bg-secondary-DEFAULT text-text-primary hover:bg-secondary-dark',
  accent: 'bg-accent-DEFAULT text-text-primary hover:bg-accent-dark',
};

const Element = href ? 'a' : 'button';
---

<Element
  href={href}
  target={target}
  rel={rel}
  class:list={[baseClass, variantClass[variant], className]}
>
  <slot />
</Element>