---
import { categoryMeta } from "../data/categories";
---

<section id="categorias" class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">
      Explora Nuestras Categor√≠as
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        categoryMeta.map((category) => (
          <a
            href={`/categorias/${category.id}`}
            class="group bg-white rounded-lg shadow-md overflow-hidden transform hover:-translate-y-1 transition-all duration-300">
            <div class="relative h-48">
              <img
                src={category.imageUrl}
                alt={category.name}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent" />
              <h3 class="absolute bottom-4 left-4 text-white text-xl font-semibold">
                {category.name}
              </h3>
            </div>
            <div class="p-4">
              <p class="text-gray-600 line-clamp-2">{category.description}</p>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>
