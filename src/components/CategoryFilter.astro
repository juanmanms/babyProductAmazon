---
import { categories } from '../data/products';

interface Props {
  activeCategory?: string;
}

const { activeCategory } = Astro.props;
---

<div class="mb-8">
  <h2 class="text-xl font-semibold mb-4">Categor√≠as</h2>
  <div class="flex flex-wrap gap-2">
    <a
      href="/"
      class={`px-4 py-2 rounded ${!activeCategory ? 'bg-purple-600 text-white' : 'bg-gray-200 text-gray-700'}`}
    >
      Todos
    </a>
    {
      categories.map((category) => (
        <a
          href={`/category/${category}`}
          class={`px-4 py-2 rounded capitalize ${
            activeCategory === category ? 'bg-purple-600 text-white' : 'bg-gray-200 text-gray-700'
          }`}
        >
          {category}
        </a>
      ))
    }
  </div>
</div>