---
import type { BlogPost } from "../types/blog";

interface Props {
  post: BlogPost;
}

const { post } = Astro.props;
---

<article
  class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow"
>
  <img src={post.imageUrl} alt={post.title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <div class="flex items-center text-sm text-gray-500 mb-2">
      <time datetime={post.publishDate}>
        {
          new Date(post.publishDate).toLocaleDateString("es-ES", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        }
      </time>
      <span class="mx-2">·</span>
      <span>{post.author}</span>
    </div>
    <h3 class="text-xl font-semibold mb-2">
      <a
        href={`/blog/${post.slug}`}
        class="text-gray-800 hover:text-primary transition-colors"
      >
        {post.title}
      </a>
    </h3>
    <p class="text-gray-600 mb-4">
      {
        post.excerpt.length > 200
          ? post.excerpt.substring(0, 200) + "..."
          : post.excerpt
      }
    </p>
    <a
      href={`/blog/${post.slug}`}
      class="inline-flex items-center text-primary font-semibold hover:text-primary-dark transition-colors"
    >
      Leer más
      <svg
        class="w-4 h-4 ml-2"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 5l7 7-7 7"></path>
      </svg>
    </a>
  </div>
</article>
